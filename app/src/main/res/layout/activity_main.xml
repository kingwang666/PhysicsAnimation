<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fling_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_circle_blue"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:text="Fling"
        android:textColor="#FFFFAD"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/bound_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_circle_red"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:text="Bound"
        android:textColor="#FFFFAD"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/lead_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_circle_deep_green"
        android:gravity="center"
        android:text="Bound with spring"
        android:textColor="#FFFFAD"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/child_1_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_circle_green" />

    <ImageView
        android:id="@+id/child_2_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:src="@drawable/ic_circle_light_green" />
</FrameLayout>

